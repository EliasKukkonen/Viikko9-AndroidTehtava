<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#70CD73"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewKuva"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtFirstSurName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Etunimi ja Sukunimi"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtOpintoHaara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opintohaara"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtPosti"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Posti"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textSuoritus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Suoritteet" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
